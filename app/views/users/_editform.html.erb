<section class="wrapper-sm">
        <div class="container-fluid">
          <h1 class="page-header">Edit your profile</h1>
          <% if flash[:notice] %>
            <div class="alert alert-info">
              <button type="button" class="close" data-dismiss="alert" aria-hidden="true"><i class="fa fa-fw fa-times-circle"></i></button>
              <p><i class="fa fa-info-circle"></i> <strong>Status:</strong> <%= flash[:notice] %></p>
            </div>
          <% end %>
          <div class="row">
            <div class="col-sm-12 col-md-8">
              <%= form_for @user, html: {class: "form-horizontal", multipart: true} do |f| %>
                <% if @user.errors.any? %>
                <div id="error_explanation" class="alert alert-danger alert-dismissable">
                  <button type="button" class="close" data-dismiss="alert" aria-hidden="true"><i class="fa fa-fw fa-times-circle"></i></button>
                  <i class="fa fa-info-circle"></i><strong> <%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</strong>
                  <ul>
                    <% @user.errors.full_messages.each do |msg| %>
                    <li><%= msg %></li>
                    <% end %>
                  </ul>
                </div>
                <% end %>

                <div class="form-group">
                  <label class="col-sm-4 control-label" for="user-avatar">Upload an avatar</label>
                  <div class="col-sm-8">
                    <%= image_tag @user.avatar.url(:thumb), class: "img-thumbnail", width: "100", height: "100", alt: @user.name %>
                    <%= f.file_field :avatar, class: "form-control" %>
                  </div>
                </div>

                <div class="form-group">
                  <%= f.label :name, class: "col-sm-4 control-label" %>
                  <div class="col-sm-8">
                    <%= f.text_field :name, class: 'form-control', placeholder: 'Enter nick name', value: @user.name %>
                  </div>
                </div>

                <div class="form-group">
                <%= f.label :email, 'Email address', class: "col-sm-4 control-label" %>
                  <div class="col-sm-8">
                    <%= f.text_field :email, class:'form-control', placeholder:'Enter email', value: @user.email %>
                  </div>
                </div>

                <div class="form-group">
                  <%= f.label :password, 'Password', class: "col-sm-4 control-label" %>
                  <div class="col-sm-8">
                    <%= f.text_field :password, type:'password', class:'form-control', placeholder:'Password' %>
                    </div>
                </div>

                <div class="form-group">
                  <%= f.label :password_confirmation, 'Password confirmation', class: "col-sm-4 control-label" %>
                  <div class="col-sm-8">
                    <%= f.text_field :password_confirmation, type:'password', class:'form-control', placeholder:'Re-type password' %>
                    </div>
                </div>

                <div class="form-group">
                  <div class="col-sm-offset-4 col-sm-8">
                    <%= f.submit "Save", id: 'create_user', class: 'btn btn-inverse' %>
                  </div>
                </div>
              <% end %>
            </div><!-- /.col -->
            <div class="col-sm-12 col-md-4">
            </div><!-- /.col -->
          </div><!-- /.row -->
        </div><!-- /.container -->
      </section>